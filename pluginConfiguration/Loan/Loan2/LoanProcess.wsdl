<definitions xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:bpws="http://docs.oasis-open.org/wsbpel/2.0/varprop" xmlns:ns="http://wso2.org/bps/samples/loan_process/schema" xmlns:ns1="http://wso2.org/bps/samples/LoanService" xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" xmlns:tns="http://wso2.org/bps/samples/LoanProcess" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" name="LoanProcess" targetNamespace="http://wso2.org/bps/samples/LoanProcess">

    <import location="LoanService.wsdl" namespace="http://wso2.org/bps/samples/LoanService"/>
    <import location="CreditRating.wsdl" namespace="http://wso2.org/bps/samples/CreditRating"/>
    <import location="CustomerInfo.wsdl" namespace="http://wso2.org/bps/samples/CustomerInfo"/>
    <types>
        <xsd:schema targetNamespace="http://wso2.org/bps/samples/LoanProcess">
            <xsd:import namespace="http://wso2.org/bps/samples/loan_process/schema" schemaLocation="loan.xsd"/>
        </xsd:schema>
    </types>
    <message name="laonRequestRequest">
        <part element="ns:LoanRequest" name="part"/>
    </message>
    <message name="laonRequestResponse">
        <part element="ns:LoanOffer" name="part"/>
    </message>
    

    <portType name="LoanProcessPortType">
        <operation name="laonRequest">
            <input message="tns:laonRequestRequest" name="input"/>
            <output message="tns:laonRequestResponse" name="output"/>
        </operation>
    </portType>

    <binding name="LoanProcessBinding" type="tns:LoanProcessPortType">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="laonRequest">
            <soap:operation/>
            <input name="input">
                <soap:body use="literal"/>
            </input>
            <output name="output">
                <soap:body use="literal"/>
            </output>
        </operation>
    </binding>
    <service name="LoanProcessService">
        <port binding="tns:LoanProcessBinding" name="LoanProcessPort">
			<soap:address location="http://localhost:8080/ode/processes/LoanProcessService"/>
        </port>
    </service>
    <plnk:partnerLinkType name="LoanProcess">
        <plnk:role name="LoanProcessPortTypeRole" portType="tns:LoanProcessPortType"/>
    </plnk:partnerLinkType>

     <bpws:property name="correlatorProp" type="ns:CustomerIDType"/>

    <bpws:propertyAlias messageType="tns:laonRequestRequest" part="part" propertyName="tns:correlatorProp">
        <bpws:query>/ns:CustomerInfo/ns:CustomerID</bpws:query>
    </bpws:propertyAlias>

    <bpws:propertyAlias messageType="ns1:getLoanOfferResponse" part="part" propertyName="tns:correlatorProp">
        <bpws:query>/ns:CustomerInfo/ns:CustomerID</bpws:query>
    </bpws:propertyAlias>
</definitions>
