module variables-basic

language calculang

test Variable unassigned [[
  var
]] 1 error

//1 error /unassigned/

test Multiply assigned variable [[
  y = 1
  y = 2
  y
]]  /multiply assigned/

test Reference resolving (1) [[
  x = 4
  [[x]]
]] resolve

test Reference resolving (2) [[
  [[x]] = 4
  [[x]]
]] resolve #2 to #1

test Content completion [[
  avariable = 1
  [[av]]
]] complete to "avariable"
